<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<table>
	<tbody>
		<% @user.posts.each do |post| %>
			<% if current_user && post.user.id == current_user.id %>
				<td>
					<%= link_to image_tag(post.url, :alt => "Image Description"), post %>
				</td>
			<% end %>
		<% end %>
	</tbody>
</table>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
