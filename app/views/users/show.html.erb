<p id="notice"><%= notice %></p>


<div class="user">

	<div class="user-grid">
		<% @user.posts.each do |post| %>
			<% if current_user && post.user.id == current_user.id %>
				<div class="user-grid__images">
					<%= link_to image_tag(post.url, :alt => "Image Description", class:"user-grid__image"), post %>
				</div>
			<% end %>
		<% end %>

	</div>

	<div class= "user-info">
		<p>
		  <strong>Name:</strong>
		  <%= @user.name %>
		</p>

		<p>
		  <strong>Email:</strong>
		  <%= @user.email %>
		</p>

		<%= link_to 'Edit Profile', edit_user_path(@user) %>
	</div>

</div>