<p id="notice"><%= notice %></p>

<h1>All Submissions</h1>

<div class="images">

	<div class="images-grid">
		<% @posts.each do |post| %>
	      <div class="images-grid__images">
	      	<%= link_to image_tag(post.url, :alt => "Image Description", class:"images-grid__image"), post %>
	      </div>
	    <% end %>
	    
	    

	</div>

	<div id="infinite-scrolling">
  		<%= will_paginate @posts %>
	</div>

	
	

</div>